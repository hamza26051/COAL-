include irvine32.inc

.data
	base DWORD 4	; number of rows
	i DWORD 1		; counter for increasing pattern
	j DWORD 4		; counter for decreasing pattern

	count_outer DWORD ?

.code
space proc uses eax
	push eax
	mov eax, 32
	call writechar
	pop eax
	ret
space endp

main proc
	mov ecx, base
	outer:
		mov count_outer, ecx

		; Pattern #01
		mov ecx, i
		ones_first:
			mov eax, 1
			call writedec
			loop ones_first

		call space
		
		; Pattern #02
		mov ecx, base
		sub ecx, i
		inc ecx
		ones_second:
			mov eax, 1
			call writedec
			loop ones_second

		inc i
		call space

		; Pattern #03
		mov eax, base
		mov ecx, j
		nums_first:
			call writedec
			dec eax
			loop nums_first

		call space

		; Pat
		mov eax, 1
		mov ecx, j
		nums_second:
			call writedec
			inc eax
			loop nums_second

		dec j
		mov ecx, count_outer
		call crlf

		loop outer

exit
main endp
end main
